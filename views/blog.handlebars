<div class="onepost">
  <div class="col-auto">
    <h2>{{name}}</h2>
    <p>{{post_content}}</p>
    <small id="postid">Post #{{id}}</small>
    <br>
    <small>Author: {{user.username}} on {{format_date date_created}}</small>
  </div>
</div>
<hr>
<div class="comment">
  <div class="col-auto">
    {{#each comments as |comment|}}
    <div class="card" id="maybeComments">
      <h4>{{comment.comment_text}}</h4>
      <div id="userCards">
        <ul>
          <li>{{format_date comment.date_created}}</li>
          <li>By: {{comment.user.username}}</li>
        </ul>
      </div>
    </div>
    {{/each}}
  </div>
  <br>
  <form class="form-group">
    <div class="form-group">
      <label for="comment">Write your comment:</label>
      <input class="form-input" type="text" id="comment" />
    </div>
    <div class="form-group">
      <button class="btn btn-primary" type="submit" id="submit-btn">Submit</button>
    </div>
  </form>
</div>
</div>
<script src="/js/comment.js"></script>