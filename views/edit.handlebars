<div class="row mt-4">
  <div class="col-md-6">
    <h3>Edit Your Post</h3>
    <p id="blog">{{id}}</p>
    <form class="form new-blog-form">
      <div class="form-group">
        <label for="blog-name">Title: </label>
        <input class="form-input" type="text" id="blog-name" name="blog-name" value={{name}} />
      </div>
      <div class="form-group">
        <label for="blog-desc">Entry</label>
        <textarea class="form-input" id="blog-desc" name="blog-desc">{{post_content}}</textarea>
      </div>
      <div class="form-group">
        <button id="submitIt" type="submit" class="btn btn-primary">Update</button>
      </div>
      <div class="col-md-4">
        <button id="deleteIt" class="btn btn-sm btn-danger" data-id="{{id}}">DELETE</button>
      </div>
    </form>
  </div>

<script src="/js/edit.js"></script>