<div class="row">
  <div class="col-auto">
    <h2>Hello, {{username}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Blog Post</h3>
    <form class="form new-blog-form">
      <div class="form-group">
        <label for="blog-name">Title</label>
        <input class="form-input" type="text" id="blog-name" name="blog-name" />
      </div>
      <div class="form-group">
        <label for="blog-desc">Entry</label>
        <textarea class="form-input" id="blog-desc" name="blog-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create Blog Post</button>
      </div>
    </form>
  </div>

 
  <div class="col-md-6 project-list">
    <h3>Your Entries:</h3>
    {{#each blogs as |blog|}}
    <div class="row mb-2 delete-entry">
      <div class="col-md-8">
        <h4><a href="/edit/{{id}}">{{name}}</a></h4>
      </div>
      <div class="col-md-4">
        <a href="/edit/{{id}}"><button>UPDATE</button></a>
      </div>
    </div>
    {{/each}}
  </div>
</div>

<script src="/js/blog.js"></script>