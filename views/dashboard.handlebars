<div class="row">
  <div class="col-auto">
    <h2>Hello, {{username}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a new Blog Post</h3>
    <form class="form new-Blog-form">
      <div class="form-group">
        <label for="Blog-name">Title</label>
        <input class="form-input" type="text" id="Blog-name" name="Blog-name" />
      </div>
      <div class="form-group">
        <label for="Blog-desc">Entry</label>
        <textarea class="form-input" id="Blog-desc" name="Blog-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create Blog Post</button>
      </div>
    </form>
  </div>

 
  <div class="col-md-6 project-list">
    <h3 class="sign-up">Your Posts:</h3>
    {{#each posts as |post| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <a href="/Blog/{{id}}">{{name}}</a>
    </h2>
  </div>
</div>
{{/each}}
</div>

<script src="/js/blog.js"></script>
